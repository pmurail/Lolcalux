{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}


	<form
		method="post" style="text-align:center;">

		{# {% if error %}
						        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						    {% endif %} #}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_home') }}">Logout</a>
			</div>
		{% endif %}
		<div class="d-flex justify-content-center">
			<div class="mb-3 ">
				<h1 class="mb-3" style="text-align:center;">Veuillez vous connecter</h1>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<div class="mb-3 " style="width:50%; text-align:center;">
				<label for="inputLogin">Login</label>
				<input type="text" name="login" id="inputLogin" class="form-control" autocomplete="username" required autofocus>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<div class="mb-3" style="width:50%; text-align:center;">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-lg btn-primary" type="submit">
			Se connecter
		</button>

	</form>

{% endblock %}
